<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    BackgroundColor="#082739"
    ios:Page.UseSafeArea="true"
    x:Class="SpyStore.DescriptionView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <NavigationPage.TitleView>
        <Image
            Aspect="AspectFit"
            Grid.Column="0"
            HeightRequest="40"
            HorizontalOptions="Start"
            Source="https://i.ibb.co/bP3Cgt4/image.png" />
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout BackgroundColor="#EDF5EB">
            <Image
                Aspect="Fill"
                Source="https://i.ibb.co/z4d1hG0/image.png"
                VerticalOptions="End" />
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Image
                    Aspect="AspectFit"
                    HeightRequest="120"
                    HorizontalOptions="Center"
                    Source="https://i.ibb.co/VSXZJJH/Open-Peeps-Avatar-and-Backdrop.png" />
                <StackLayout Margin="40,0" VerticalOptions="CenterAndExpand">
                    <Label Text="Nombre:" />
                    <Label
                        HorizontalTextAlignment="Center"
                        Text="DOE"
                        x:Name="Name" />
                    <Label Text="ID:" />
                    <Label
                        HorizontalTextAlignment="Center"
                        Text="007"
                        x:Name="Id" />
                    <Label Text="Precio:" />
                    <Label
                        HorizontalTextAlignment="Center"
                        Text="1000"
                        x:Name="Price" />
                    <Label Text="Descripcion:" />
                    <Frame
                        CornerRadius="20"
                        HeightRequest="300"
                        HorizontalOptions="CenterAndExpand"
                        Margin="20"
                        WidthRequest="300">
                        <Label Text="" x:Name="Description" />
                    </Frame>
                    <Button Clicked="AlertDipaly" Text="CONTRATAR" />
                </StackLayout>
            </StackLayout>
            <Image
                Aspect="Fill"
                Source="https://i.ibb.co/TPXPX1p/image.png"
                VerticalOptions="End" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>